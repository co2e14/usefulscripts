#!bin/bash
# C.Orr 2020

# Script to generate XSCALE input file
# Chris Orr 2019

module load xds

echo OUTPUT_FILE=XSCALE.HKL > XSCALE.INP
echo RESOLUTION_SHELLS=20 10 8 6 4 3 2.5 2.2 2.1 2 1.9 1.8 1.7 1.6 1.5 1.4 1.3 1 >> XSCALE.INP
echo !INCLUDE_RESOLUTION_RANGE= >> XSCALE.INP
echo !MERGE=TRUE >> XSCALE.INP
echo !FRIEDEL\'S_LAW=FALSE >> XSCALE.INP
echo !REFLECTIONS/CORRECTION_FACTOR=50 >> XSCALE.INP
echo !STRICT_ABSORPTION_CORRECTION=TRUE >> XSCALE.INP
echo INPUT_FILE=./XDS_ASCII.HKL >> XSCALE.INP

nano XSCALE.INP
